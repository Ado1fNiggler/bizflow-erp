{
  "name": "bizflow-erp-backend",
  "version": "1.0.0",
  "description": "Modern ERP System for Greek Business - Backend API",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "NODE_ENV=test jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:create": "sequelize-cli migration:generate --name",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "db:reset": "npm run migrate:undo:all && npm run migrate && npm run seed",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "migrate:dbf": "node services/migrationService.js",
    "docs": "jsdoc -c jsdoc.json",
    "swagger": "node scripts/generate-swagger.js",
    "build": "npm run lint && npm run test",
    "docker:build": "docker build -t bizflow-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env bizflow-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:logs": "pm2 logs",
    "analyze": "source-map-explorer 'dist/**/*.js'"
  },
  "dependencies": {
    "@sentry/node": "^7.91.0",
    "@socket.io/redis-adapter": "^8.2.1",
    "agenda": "^5.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.6.3",
    "bcrypt": "^5.1.1",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "connect-pg-simple": "^9.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "csv-stringify": "^6.4.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dompurify": "^3.0.8",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "fast-xml-parser": "^5.2.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsdom": "^23.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mjml": "^4.14.1",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.44",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.4",
    "nanoid": "^5.0.4",
    "newrelic": "^11.7.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.14.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sanitize-html": "^2.11.0",
    "sequelize": "^6.35.2",
    "socket.io": "^4.6.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "unzipper": "^0.12.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^2.1.0",
    "factory-girl": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lint-staged": "^15.2.0",
    "nock": "^13.4.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "sequelize-cli": "^6.6.2",
    "sinon": "^17.0.1",
    "source-map-explorer": "^2.5.3",
    "supertest": "^6.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/bizflow-erp.git"
  },
  "keywords": [
    "erp",
    "business",
    "management",
    "greek",
    "invoice",
    "accounting",
    "postgresql",
    "node",
    "express",
    "api"
  ],
  "author": "BizFlow Team",
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/yourusername/bizflow-erp/issues"
  },
  "homepage": "https://github.com/yourusername/bizflow-erp#readme",
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/migrations/**",
      "!**/seeders/**",
      "!**/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "nodemonConfig": {
    "watch": [
      "*.js",
      "config/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "utils/**/*.js"
    ],
    "ignore": [
      "node_modules",
      "logs",
      "uploads",
      "coverage",
      "tests"
    ],
    "ext": "js,json",
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "lf"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:security/recommended"
    ],
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-underscore-dangle": "off",
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-param-reassign": "off",
      "no-return-await": "off",
      "class-methods-use-this": "off",
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ]
    }
  }
}

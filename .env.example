# ==============================================
# BizFlow ERP - Environment Configuration
# ==============================================

# ==============================================
# Application Settings
# ==============================================
NODE_ENV=development
PORT=3000
APP_NAME="BizFlow ERP"
APP_VERSION=2.0.0

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bizflow_erp
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# For production, you can also use DATABASE_URL
# DATABASE_URL=postgresql://user:password@host:port/database

# ==============================================
# Authentication & Security
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=90d

# Password hashing
BCRYPT_ROUNDS=10

# ==============================================
# Email Configuration (SMTP)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="BizFlow ERP <noreply@yourcompany.gr>"

# ==============================================
# MyDATA Integration (AADE)
# ==============================================
MYDATA_ENVIRONMENT=sandbox
# MYDATA_ENVIRONMENT=production

# MyDATA API Credentials
MYDATA_USER_ID=your-mydata-user-id
MYDATA_SUBSCRIPTION_KEY=your-subscription-key

# Company Information for MyDATA
COMPANY_NAME="Your Company Name"
COMPANY_VAT_NUMBER=123456789
COMPANY_ADDRESS="Your Address"
COMPANY_ADDRESS_NUMBER=123
COMPANY_POSTAL_CODE=12345
COMPANY_CITY="Athens"

# AWS S3 Configuration (Optional - for backups and uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=erp-backups

# Redis Configuration (Optional - for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Backup Settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# Security
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=your-encryption-key-32-characters

# API Keys (Optional)
GOOGLE_MAPS_API_KEY=
SENDGRID_API_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=

# ==============================================
# Greek Localization
# ==============================================
DEFAULT_LOCALE=el-GR
DEFAULT_TIMEZONE=Europe/Athens
DEFAULT_CURRENCY=EUR

# ==============================================
# Invoice Configuration
# ==============================================
INVOICE_DEFAULT_SERIES=A
INVOICE_DEFAULT_VAT_RATE=24
INVOICE_DEFAULT_PAYMENT_TERMS=30

# ==============================================
# PDF Generation
# ==============================================
PDF_GENERATION_TIMEOUT=30000
# 30 seconds

PDF_MAX_CONCURRENT=5
# Maximum concurrent PDF generations

# ==============================================
# Feature Flags
# ==============================================
FEATURE_MYDATA_INTEGRATION=true
FEATURE_PDF_GENERATION=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true
FEATURE_TWO_FACTOR_AUTH=false

# Features Toggle
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false

# Timezone
TZ=Europe/Athens

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Development Settings
DEBUG=false
FORCE_SYNC_DB=false